<?xml version="1.0" encoding="utf-8"?>
<!--    课程问答 -->
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout android:id="@+id/course_questiondetails_layout_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44"
        android:layout_marginLeft="@dimen/dp13"
        android:layout_marginRight="@dimen/dp13"
        android:orientation="horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <ImageView
            android:id="@+id/course_questiondetails_layout_return_button1"
            android:layout_width="@dimen/dp12"
            android:layout_height="@dimen/dp16"
            android:layout_gravity="center"
            android:background="@drawable/button_return_right_black"/>
        <TextView
            android:id="@+id/course_questiondetails_layout_titletext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:text="全部评论"
            android:textColor="#333333"
            android:singleLine="true"
            android:ellipsize="end"
            android:textStyle="bold"
            android:textSize="@dimen/textsize18"/>
    </LinearLayout>
    <View
        android:id="@+id/course_questiondetails_layout_line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_gravity="center_horizontal"
        android:background="#e5e5e5"
        android:layout_marginBottom="@dimen/dp5"
        android:layout_below="@id/course_questiondetails_layout_title"/>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/course_questiondetails_layout_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/course_questiondetails_layout_line1">

        <com.scwang.smartrefresh.header.DeliveryHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/course_questiondetails_layout_line1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/course_questiondetails_layout_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:focusableInTouchMode="true">
                        <com.android.school.ControllerCustomRoundAngleImageView
                            android:id="@+id/course_questiondetails_child_headportrait"
                            android:layout_width="@dimen/dp40"
                            android:layout_height="@dimen/dp40"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="centerCrop"
                            app:image_circle="true"
                            app:image_radius="16dp"
                            app:image_shadow="false"
                            app:image_shadow_radius="5dp"
                            app:shadow_color="0xffe4e4e4"
                            android:layout_marginLeft="@dimen/dp13"
                            android:layout_marginRight="@dimen/dp10"
                            android:layout_marginTop="@dimen/dp25"
                            android:background="@drawable/image_teachersdefault"/>
                        <LinearLayout
                            android:id="@+id/course_questiondetails_child_content1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_toRightOf="@id/course_questiondetails_child_headportrait">
                            <TextView
                                android:id="@+id/course_questiondetails_child_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="学员a"
                                android:layout_marginTop="@dimen/dp25"
                                android:textSize="@dimen/textsize17"
                                android:layout_marginBottom="@dimen/dp14"
                                android:layout_marginRight="@dimen/dp13"
                                android:textColor="#333333"/>
                            <TextView
                                android:id="@+id/course_questiondetails_child_message"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/textsize15"
                                android:textColor="#666666"
                                android:text="这个老师特别好，知识讲解很详细。"
                                android:layout_marginRight="@dimen/dp13"
                                android:layout_below="@id/course_questiondetails_child_name"
                                android:layout_marginBottom="@dimen/dp14"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/course_questiondetails_child_function"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_below="@id/course_questiondetails_child_content1"
                            android:layout_toRightOf="@id/course_questiondetails_child_headportrait"
                            android:layout_marginRight="@dimen/dp13"
                            android:layout_marginBottom="@dimen/dp24">
                            <TextView
                                android:id="@+id/course_questiondetails_child_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10-25 00:10"
                                android:textColor="#999999"
                                android:layout_weight="1"
                                android:textSize="@dimen/textsize14"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:layout_weight="1">
                                <ImageView
                                    android:layout_width="@dimen/dp17"
                                    android:layout_height="@dimen/dp10"
                                    android:layout_gravity="center"
                                    android:layout_marginRight="@dimen/dp7"
                                    android:background="@drawable/button_eye_gray"/>
                                <TextView
                                    android:id="@+id/course_questiondetails_child_look"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="浏览3"
                                    android:textSize="@dimen/textsize14"
                                    android:textColor="#999999"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="@dimen/dp16"
                                    android:layout_height="@dimen/dp16"
                                    android:layout_gravity="center"
                                    android:layout_marginRight="@dimen/dp10"
                                    android:background="@drawable/button_discuss_gray"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="评论"
                                    android:textSize="@dimen/textsize14"
                                    android:textColor="#999999"/>
                                <TextView
                                    android:id="@+id/course_questiondetails_child_discusstext"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="0"
                                    android:textSize="@dimen/textsize14"
                                    android:textColor="#999999"/>
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>
                    <View
                        android:id="@+id/course_questiondetails_layout_line2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp1"
                        android:layout_gravity="center_horizontal"
                        android:background="#e5e5e5"
                        android:layout_marginBottom="@dimen/dp5"
                        android:layout_below="@id/course_questiondetails_layout_title"/>
                    <LinearLayout
                        android:id="@+id/course_questiondetails_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fbfbfb"
                        android:orientation="vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/courseAnswer_datails_end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp15"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:visibility="invisible"
                    android:layout_marginBottom="@dimen/dp_80">
                    <View
                        android:layout_width="@dimen/dp_36"
                        android:layout_height="@dimen/dp1"
                        android:background="#e5e5e5"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已显示全部内容"
                        android:textSize="@dimen/textsize13"
                        android:textColor="#cc999999"
                        android:layout_marginLeft="@dimen/dp10"
                        android:layout_marginRight="@dimen/dp10"/>
                    <View
                        android:layout_width="@dimen/dp_36"
                        android:layout_height="@dimen/dp1"
                        android:background="#e5e5e5"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <com.scwang.smartrefresh.layout.footer.BallPulseFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</RelativeLayout>
