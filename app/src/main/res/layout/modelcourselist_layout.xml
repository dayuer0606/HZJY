<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/courselist_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.android.jwjy.zkktproduct.ControllerCustomRoundAngleImageView
        android:id="@+id/coursecover"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_90"
        app:shadow_color="0xffe4e4e4"
        app:image_shadow="true"
        app:image_radius="@dimen/dp5"
        app:image_shadow_radius="@dimen/dp5"
        android:layout_marginTop="@dimen/dp15"
        android:layout_marginLeft="@dimen/dp13"
        android:layout_marginRight="@dimen/dp15"
        android:scaleType="centerCrop"/>
    <ImageView
        android:id="@+id/coursetype"
        android:layout_width="@dimen/dp30"
        android:layout_height="@dimen/dp15"
        android:background="@drawable/button_myclass_mix"
        android:layout_alignBottom="@id/coursecover"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginBottom="@dimen/dp_7"/>
    <TextView
        android:id="@+id/courseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开学第一课"
        android:gravity="left"
        android:textSize="@dimen/textsize17"
        android:textColor="#333333"
        android:layout_toRightOf="@id/coursecover"
        android:layout_alignTop="@id/coursecover"/>
    <TextView
        android:id="@+id/coursepricebegin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="left|bottom"
        android:layout_gravity="left"
        android:textColor="#f32d2d"
        android:textSize="@dimen/textsize13"
        android:layout_toRightOf="@id/coursecover"
        android:layout_alignBottom="@id/coursecover"
        android:layout_marginBottom="@dimen/dp1"/>
    <TextView
        android:id="@+id/courseprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="left|bottom"
        android:layout_gravity="left"
        android:textColor="#333333"
        android:textSize="@dimen/textsize19"
        android:layout_toRightOf="@id/coursepricebegin"
        android:layout_alignBottom="@id/coursecover"/>
    <TextView
        android:id="@+id/coursepriceend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="left|bottom"
        android:layout_gravity="left"
        android:textColor="#f32d2d"
        android:textSize="@dimen/textsize13"
        android:layout_toRightOf="@id/courseprice"
        android:layout_alignBottom="@id/coursecover"
        android:layout_marginBottom="@dimen/dp1"/>
    <TextView
        android:id="@+id/coursepriceOld"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="left"
        android:layout_gravity="left"
        android:textSize="@dimen/sp_10"
        android:textColor="#999999"
        android:layout_marginLeft="@dimen/dp8"
        android:layout_toRightOf="@id/coursepriceend"
        android:layout_alignBottom="@id/coursecover"/>
    <View
        android:id="@+id/course_line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_gravity="center_horizontal"
        android:background="#e5e5e5"
        android:layout_marginTop="@dimen/dp15"
        android:layout_marginBottom="@dimen/dp5"
        android:layout_marginLeft="@dimen/dp13"
        android:layout_marginRight="@dimen/dp13"
        android:layout_below="@id/coursepriceOld"/>
</RelativeLayout>