<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:focusable="true">
    <ScrollView
        android:id="@+id/login_mainScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/login_main"
            android:layout_width="@dimen/dp0"
            android:layout_height="@dimen/dp0"
            android:visibility="invisible"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp33"
            android:layout_marginRight="@dimen/dp33"
            android:focusableInTouchMode="true">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="密码登录"
                android:layout_marginTop="@dimen/dp_65"
                android:textSize="@dimen/sp_34"
                android:textColor="#000000"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="请输入正确的账号密码"
                android:textColor="#ff000000"
                android:textSize="@dimen/textsize20"
                android:layout_marginTop="@dimen/dp18"
                />
            <EditText
                android:id="@+id/login_username_edittext"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40"
                android:layout_marginTop="@dimen/dp_41"
                android:hint="请输入账号"
                android:singleLine="true"
                android:enabled="true"
                android:paddingLeft="@dimen/dp21"
                android:paddingRight="@dimen/dp21"
                android:textSize="@dimen/textsize14"
                android:background="@drawable/edit_shape_20"/>

            <RelativeLayout
                android:id="@+id/login_password_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40"
                android:layout_marginTop="@dimen/dp24">
                <EditText
                    android:id="@+id/login_password_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="请输入密码"
                    android:singleLine="true"
                    android:enabled="true"
                    android:paddingLeft="@dimen/dp21"
                    android:paddingRight="@dimen/dp21"
                    android:textSize="@dimen/textsize14"
                    android:background="@drawable/edit_shape_20"/>
                <ImageView
                    android:id="@+id/login_password_visible_imageview"
                    android:layout_width="@dimen/dp30"
                    android:layout_height="@dimen/dp20"
                    android:src="@drawable/icon_eye"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp15"/>
            </RelativeLayout>

            <EditText
                android:id="@+id/login_project_edittext"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40"
                android:layout_marginTop="@dimen/dp_41"
                android:hint="请输入合作商id"
                android:singleLine="true"
                android:enabled="true"
                android:paddingLeft="@dimen/dp21"
                android:paddingRight="@dimen/dp21"
                android:textSize="@dimen/textsize14"
                android:background="@drawable/edit_shape_20"/>
            <Button
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp45"
                android:layout_marginTop="@dimen/dp_54"
                android:background="@drawable/button_style5"
                android:text="登录"
                android:textColor="#ffffff"
                android:enabled="false"
                android:textSize="@dimen/textsize18"
                android:textStyle="bold"
                android:onClick="onClickLogin"/>
            <TextView
                android:layout_marginTop="@dimen/dp12"
                android:id="@+id/register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="验证码登录"
                android:gravity="right"
                android:clickable="true"
                android:textColor="#000000"
                android:textSize="@dimen/textsize16"
                android:onClick="onClickVerLogin"/>
        </LinearLayout>
    </ScrollView>
    <ScrollView
        android:id="@+id/login_register_mainScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/login_register_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp33"
            android:layout_marginRight="@dimen/dp33">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="验证码登录"
                android:layout_marginTop="@dimen/dp_65"
                android:textSize="@dimen/sp_34"
                android:textColor="#000000"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="新用户登录后将自动创建账号"
                android:textColor="#ff000000"
                android:textSize="@dimen/textsize20"
                android:layout_marginTop="@dimen/dp18"
                />
            <EditText
                android:id="@+id/login_register_username_edittext"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40"
                android:layout_marginTop="@dimen/dp_41"
                android:hint="请输入账号"
                android:singleLine="true"
                android:enabled="true"
                android:paddingLeft="@dimen/dp21"
                android:paddingRight="@dimen/dp21"
                android:textSize="@dimen/textsize14"
                android:background="@drawable/edit_shape_20"/>

            <RelativeLayout
                android:id="@+id/login_register_smscode_layout"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp24"
                android:layout_height="@dimen/dp40">
                <EditText
                    android:id="@+id/login_register_smscode_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/dp21"
                    android:paddingRight="@dimen/dp21"
                    android:hint="请输入验证码"
                    android:singleLine="true"
                    android:maxLength="6"
                    android:textSize="@dimen/textsize14"
                    android:background="@drawable/edit_shape_20"/>
                <TextView
                    android:id="@+id/register_getsmscode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="获取验证码"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp13"
                    android:clickable="true"
                    android:singleLine="true"
                    android:textSize="@dimen/textsize14"
                    android:textColor="#FF5A30"
                    android:textColorHint="#AFAFAF"
                    android:onClick="onClickRegisterSMSCodeGet"/>
            </RelativeLayout>

            <EditText
                android:id="@+id/login_register_project_edittext"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40"
                android:layout_marginTop="@dimen/dp_41"
                android:hint="请输入合作商id"
                android:singleLine="true"
                android:enabled="true"
                android:paddingLeft="@dimen/dp21"
                android:paddingRight="@dimen/dp21"
                android:textSize="@dimen/textsize14"
                android:background="@drawable/edit_shape_20"/>
            <Button
                android:id="@+id/login_register_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_54"
                android:background="@drawable/button_style5"
                android:text="登录"
                android:textColor="#ffffff"
                android:textSize="@dimen/textsize18"
                android:enabled="false"
                android:textStyle="bold"
                android:onClick="onClickVerLoginStart"/>
            <TextView
                android:layout_marginTop="@dimen/dp12"
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="密码登录"
                android:gravity="right"
                android:clickable="true"
                android:textColor="#000000"
                android:textSize="@dimen/textsize16"
                android:onClick="onClickPasswordLogin"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>