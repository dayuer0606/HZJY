<?xml version="1.0" encoding="utf-8"?>
<!--    课程问答-选择标签 -->
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout android:id="@+id/communityanswer_choosesign_layout_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44"
        android:layout_marginLeft="@dimen/dp13"
        android:layout_marginRight="@dimen/dp13"
        android:orientation="horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <ImageView
            android:id="@+id/communityanswer_choosesign_layout_return_button1"
            android:layout_width="@dimen/dp12"
            android:layout_height="@dimen/dp16"
            android:layout_gravity="center"
            android:background="@drawable/button_return_right_black"
            android:onClick="onClickCommunityAnswerReturn"/>
        <TextView
            android:id="@+id/communityanswer_choosesign_layout_titletext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:text="选择标签"
            android:textColor="#333333"
            android:singleLine="true"
            android:ellipsize="end"
            android:textStyle="bold"
            android:textSize="@dimen/textsize18"/>
<!--        android:textColor="#ff333333"-->
        <TextView
            android:id="@+id/communityanswer_choosesign_layout_commit_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="发表"
            android:textColor="#999999"
            android:textSize="@dimen/textsize15"/>
    </LinearLayout>
    <View
        android:id="@+id/communityanswer_choosesign_layout_line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_gravity="center_horizontal"
        android:background="#e5e5e5"
        android:layout_marginBottom="@dimen/dp5"
        android:layout_below="@id/communityanswer_choosesign_layout_title"/>
    <TextView
        android:id="@+id/communityanswer_choosesign_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已选择 "
        android:textColor="#ff333333"
        android:textSize="@dimen/textsize17"
        android:layout_marginLeft="@dimen/dp13"
        android:layout_marginTop="@dimen/dp20"
        android:layout_marginBottom="@dimen/dp15"
        android:layout_below="@id/communityanswer_choosesign_layout_line1"
        />
    <TextView
        android:id="@+id/communityanswer_choosesign_choosecount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#ff679ef0"
        android:textSize="@dimen/textsize17"
        android:layout_marginLeft="@dimen/dp13"
        android:layout_marginTop="@dimen/dp20"
        android:layout_marginBottom="@dimen/dp15"
        android:layout_toRightOf="@id/communityanswer_choosesign_choose"
        android:layout_below="@id/communityanswer_choosesign_layout_line1"
        />
    <TextView
        android:id="@+id/communityanswer_choosesign_choose1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 个"
        android:textColor="#ff333333"
        android:textSize="@dimen/textsize17"
        android:layout_marginLeft="@dimen/dp13"
        android:layout_marginTop="@dimen/dp20"
        android:layout_marginBottom="@dimen/dp15"
        android:layout_toRightOf="@id/communityanswer_choosesign_choosecount"
        android:layout_below="@id/communityanswer_choosesign_layout_line1"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/communityanswer_choosesign_choose1">
        <com.android.jwjy.zkktproduct.ControllerWarpLinearLayout
            android:id="@+id/communityanswer_choosesign_warpLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:grivate="left"
            app:horizontal_Space="10dp"
            app:isFull="false"
            app:vertical_Space="10dp"/>
    </ScrollView>
</RelativeLayout>
