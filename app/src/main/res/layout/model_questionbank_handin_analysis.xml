<?xml version="1.0" encoding="utf-8"?>
<!--    题库 做题设置 -->
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:id="@+id/questionbank_handin_analysis_main_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44"
        android:layout_marginLeft="@dimen/dp13"
        android:layout_marginRight="@dimen/dp13"
        android:orientation="horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <ImageView
            android:id="@+id/questionbank_handin_analysis_main_return_button1"
            android:layout_width="@dimen/dp12"
            android:layout_height="@dimen/dp16"
            android:layout_gravity="center"
            android:background="@drawable/button_return_right_black"
            android:clickable="true"
            android:onClick="onClickQuestionBankReturn"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|right">
            <ImageView
                android:id="@+id/questionbank_handin_analysis_collection"
                android:layout_width="@dimen/dp_19"
                android:layout_height="@dimen/dp_19"
                android:background="@drawable/button_collect_disable_black"/>
            <ImageView
                android:id="@+id/questionbank_handin_analysis_fontsize"
                android:layout_width="@dimen/dp15"
                android:layout_height="@dimen/dp_19"
                android:layout_marginLeft="@dimen/dp15"
                android:background="@drawable/button_questionbank_fontsize_nomal"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/questionbank_handin_analysis_main_line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_gravity="center_horizontal"
        android:background="#e5e5e5"
        android:layout_below="@id/questionbank_handin_analysis_main_title"/>
    <LinearLayout
        android:id="@+id/questionbank_handin_analysis_questiontitlelayout"
        android:layout_below="@id/questionbank_handin_analysis_main_line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp13"
        android:layout_marginRight="@dimen/dp13"
        android:layout_marginTop="@dimen/dp20">
        <TextView
            android:id="@+id/questionbank_handin_analysis_questiontitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="建筑防火案例分析"
            android:textSize="@dimen/textsize18"
            android:textColor="#649cf0"/>
        <TextView
            android:id="@+id/questionbank_handin_analysis_questiontype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[单选题]"
            android:layout_marginLeft="@dimen/dp10"
            android:textSize="@dimen/textsize15"
            android:textColor="#999999"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/questionbank_handin_analysis_questioncountlayout"
        android:layout_below="@id/questionbank_handin_analysis_questiontitlelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp13"
        android:layout_marginRight="@dimen/dp13">
        <TextView
            android:id="@+id/questionbank_handin_analysis_questioncount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="0"
            android:textSize="@dimen/textsize15"
            android:textColor="#649cf0"/>
        <TextView
            android:id="@+id/questionbank_handin_analysis_questioncountsum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/0"
            android:textSize="@dimen/textsize15"
            android:textColor="#666666"/>
    </LinearLayout>
    <ScrollView
        android:id="@+id/coursedetails_handin_analysis_detailsscrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp20"
        android:scrollbars="none"
        android:layout_below="@id/questionbank_handin_analysis_questioncountlayout"
        android:layout_marginBottom="@dimen/dp_55">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <LinearLayout
                android:id="@+id/coursedetails_handin_analysis_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/dp13"
                android:layout_marginLeft="@dimen/dp13"/>
            <LinearLayout
                android:id="@+id/coursedetails_handin_analysis_analysis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/dp13"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/button_handin_analysis_button_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/button_handin_analysis_beforquestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/dp8"
            android:layout_marginBottom="@dimen/dp8">
            <ImageView
                android:layout_width="@dimen/dp23"
                android:layout_height="@dimen/dp18"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dp5"
                android:background="@drawable/button_questionbank_beforequestion"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上一题"
                android:layout_gravity="center"
                android:textSize="@dimen/textsize10"
                android:textColor="#666666"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/button_handin_analysis_answerquestioncard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/dp8"
            android:layout_marginBottom="@dimen/dp8">
            <ImageView
                android:layout_width="@dimen/dp17"
                android:layout_height="@dimen/dp18"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dp5"
                android:background="@drawable/button_questionbank_answercard"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="答题卡"
                android:layout_gravity="center"
                android:textSize="@dimen/textsize10"
                android:textColor="#666666"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/button_handin_analysis_nextquestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/dp8"
            android:layout_marginBottom="@dimen/dp8">
            <ImageView
                android:layout_width="@dimen/dp23"
                android:layout_height="@dimen/dp18"
                android:layout_gravity="center"
                android:background="@drawable/button_questionbank_next"
                android:layout_marginBottom="@dimen/dp5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下一题"
                android:layout_gravity="center"
                android:textSize="@dimen/textsize10"
                android:textColor="#666666"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/questionbank_handin_analysis_main_line2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_gravity="center_horizontal"
        android:background="#e5e5e5"
        android:layout_above="@id/button_handin_analysis_button_layout"/>
</RelativeLayout>
