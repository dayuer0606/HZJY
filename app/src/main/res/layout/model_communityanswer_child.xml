<?xml version="1.0" encoding="utf-8"?>
<!--社区问答-内容模板-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusableInTouchMode="true">
    <com.android.jwjy.zkktproduct.ControllerCustomRoundAngleImageView
        android:id="@+id/communityanswer_child_headportrait"
        android:layout_width="@dimen/dp40"
        android:layout_height="@dimen/dp40"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"
        app:image_circle="true"
        app:image_radius="16dp"
        app:image_shadow="false"
        app:image_shadow_radius="5dp"
        app:shadow_color="0xffe4e4e4"
        android:layout_marginLeft="@dimen/dp13"
        android:layout_marginRight="@dimen/dp10"
        android:layout_marginTop="@dimen/dp20"
        android:background="@drawable/image_teachersdefault"/>
    <LinearLayout
        android:id="@+id/communityanswer_child_content1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/communityanswer_child_headportrait">
        <TextView
            android:id="@+id/course_question_child_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学员a"
            android:layout_marginTop="@dimen/dp20"
            android:textSize="@dimen/textsize17"
            android:layout_marginBottom="@dimen/dp7"
            android:layout_marginRight="@dimen/dp13"
            android:textColor="#333333"/>
        <TextView
            android:id="@+id/communityanswer_child_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10-25 00:10"
            android:textColor="#999999"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/dp10"
            android:textSize="@dimen/textsize14"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/communityanswer_child_titlelayout">
            <ImageView
                android:id="@+id/communityanswer_child_top"
                android:layout_width="@dimen/dp12"
                android:layout_height="@dimen/dp13"
                android:layout_marginRight="@dimen/dp4"
                android:background="@drawable/button_answerdetails_top"
                android:layout_gravity="center"/>
            <ImageView
                android:id="@+id/communityanswer_child_fine"
                android:layout_width="@dimen/dp12"
                android:layout_height="@dimen/dp13"
                android:layout_marginRight="@dimen/dp5"
                android:background="@drawable/button_answerdetails_fine"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/communityanswer_child_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="问答标题"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_gravity="center"
                android:textSize="@dimen/textsize16"
                android:textColor="#333333"
                android:layout_marginRight="@dimen/dp13"/>
        </LinearLayout>

        <TextView
            android:id="@+id/communityanswer_child_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize15"
            android:textColor="#666666"
            android:text="这个老师特别好，知识讲解很详细。"
            android:layout_marginRight="@dimen/dp13"
            android:layout_below="@id/course_question_child_name"
            android:lineSpacingExtra="@dimen/dp7"
            android:layout_marginTop="@dimen/dp5"/>
    </LinearLayout>
<!--   layout_marginBottom = 10dp-->
    <GridLayout
        android:id="@+id/communityanswer_child_imagelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/communityanswer_child_content1"
        android:layout_toRightOf="@id/communityanswer_child_headportrait"
        android:layout_marginRight="@dimen/dp13"
        android:layout_marginBottom="@dimen/dp0"
        android:rowCount="5"
        android:columnCount="2"/>
    <LinearLayout
        android:id="@+id/communityanswer_child_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/communityanswer_child_imagelayout"
        android:background="#f4f4f4"
        android:layout_toRightOf="@id/communityanswer_child_headportrait"
        android:layout_marginRight="@dimen/dp13"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/communityanswer_child_content" />
        <LinearLayout
            android:id="@+id/communityanswer_child_lookalldiscuss"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp0"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp13">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看全部评论"
                android:textColor="#649cf0"
                android:textSize="@dimen/textsize14"/>
            <ImageView
                android:layout_width="@dimen/dp4"
                android:layout_height="@dimen/dp8"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp10"
                android:background="@drawable/button_arrow_right_blue"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/communityanswer_child_sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp12"
        android:layout_below="@id/communityanswer_child_body"
        android:layout_toRightOf="@id/communityanswer_child_headportrait"
        android:layout_marginRight="@dimen/dp13">
        <TextView
            android:id="@+id/communityanswer_child_sign1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/textview_style_rect_black"
            android:text="消防安全实务"
            android:textColor="#ff999999"
            android:textSize="@dimen/textsize12"
            android:layout_marginRight="@dimen/dp10"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="center"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/communityanswer_child_sign2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/textview_style_rect_black"
            android:text="消防安全实务"
            android:textColor="#ff999999"
            android:textSize="@dimen/textsize12"
            android:layout_marginRight="@dimen/dp10"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="center"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/communityanswer_child_sign3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/textview_style_rect_black"
            android:text="消防安全实务"
            android:textColor="#ff999999"
            android:textSize="@dimen/textsize12"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="center"
            android:visibility="invisible"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/communityanswer_child_function"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp12"
        android:layout_below="@id/communityanswer_child_sign"
        android:layout_toRightOf="@id/communityanswer_child_headportrait"
        android:layout_marginRight="@dimen/dp13"
        android:layout_marginBottom="@dimen/dp15"
        android:gravity="right|center_vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginRight="@dimen/dp25">
            <ImageView
                android:layout_width="@dimen/dp17"
                android:layout_height="@dimen/dp10"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp7"
                android:background="@drawable/button_eye_gray"/>
            <TextView
                android:id="@+id/communityanswer_child_look"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="浏览3"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/textsize14"
                android:textColor="#999999"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/communityanswer_child_function_discuss"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/dp16"
                android:layout_height="@dimen/dp16"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp10"
                android:background="@drawable/button_discuss_gray"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="评论"
                android:textSize="@dimen/textsize14"
                android:textColor="#999999"/>
            <TextView
                android:id="@+id/communityanswer_child_discusstext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0"
                android:textSize="@dimen/textsize14"
                android:textColor="#999999"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/communityanswer_child_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0_5"
        android:background="#e5e5e5"
        android:layout_toRightOf="@id/communityanswer_child_headportrait"
        android:layout_marginRight="@dimen/dp13"
        android:layout_below="@id/communityanswer_child_function" />
</RelativeLayout>
