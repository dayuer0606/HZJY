<?xml version="1.0" encoding="utf-8"?><!--    题库 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/questionbank_main_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44"
        android:layout_marginLeft="@dimen/dp13"
        android:layout_marginRight="@dimen/dp13"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/questionbank_main_return_button1"
            android:layout_width="@dimen/dp12"
            android:layout_height="@dimen/dp16"
            android:layout_gravity="center"
            android:background="@drawable/button_return_right_black"
            android:clickable="true"
            android:onClick="onClickQuestionBankReturn" />

        <TextView
            android:id="@+id/questionbank_main_titletext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="题库"
            android:textColor="#333333"
            android:textSize="@dimen/textsize18"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:id="@+id/questionbank_main_line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_below="@id/questionbank_main_title"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp5"
        android:background="#e5e5e5" />


    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/Smart_model_questionbank"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/questionbank_main_line1">

        <com.scwang.smartrefresh.header.DeliveryHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ScrollView
                android:id="@+id/questionbank_main_content_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:id="@+id/background"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_94"
                        android:layout_marginLeft="@dimen/dp13"
                        android:layout_marginRight="@dimen/dp13"
                        android:layout_marginTop="@dimen/dp10"
                        android:layout_marginBottom="@dimen/dp10"
                        android:layout_centerVertical="true"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="4dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/goto_beforetest"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:textColor="#323334"
                                android:layout_marginLeft="@dimen/dp21"
                                android:layout_marginRight="@dimen/dp21"
                                android:textSize="@dimen/textsize18"
                                android:layout_marginTop="@dimen/dp24"
                                android:text="继续上次练习"/>
                            <TextView
                                android:id="@+id/goto_beforetest_content"
                                android:layout_below="@+id/goto_beforetest"
                                android:layout_width="match_parent"
                                android:layout_marginLeft="@dimen/dp21"
                                android:layout_marginRight="@dimen/dp21"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:gravity="bottom"
                                android:textSize="@dimen/textsize14"
                                android:textColor="#9C9C9C"
                                android:layout_marginBottom="@dimen/dp24"
                                android:layout_alignParentBottom="true"
                                android:text="上次练习："/>
                            <ImageView
                                android:layout_width="@dimen/dp8"
                                android:layout_height="@dimen/dp13"
                                android:layout_marginRight="@dimen/dp40"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/button_arrow_right"/>
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>
                    <LinearLayout
                        android:id="@+id/questionbank_main_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>


        <com.scwang.smartrefresh.layout.footer.BallPulseFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>


    <LinearLayout
        android:id="@+id/questionbank_main_nodata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/questionbank_main_line1"
        android:gravity="center"
        android:orientation="horizontal" />
</RelativeLayout>
