<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/modelmy_records_class_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#ff212832"
        android:textSize="@dimen/textsize16"
        android:layout_marginTop="@dimen/dp20"
        android:layout_marginLeft="@dimen/dp13"
        android:layout_marginRight="@dimen/dp4"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_toLeftOf="@+id/modelmy_records_class_start"
        />

    <LinearLayout
        android:id="@+id/modelmy_records_class_time_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp13"
        android:layout_marginTop="@dimen/dp13"
        android:layout_below="@id/modelmy_records_class_name"
        android:layout_marginRight="@dimen/dp4"
        android:layout_toLeftOf="@+id/modelmy_records_class_start"
        android:gravity="center">
        <ImageView
            android:layout_width="@dimen/dp10"
            android:layout_height="@dimen/dp10"
            android:background="@drawable/button_clock_gray"
            android:layout_marginRight="@dimen/dp7"/>
        <TextView
            android:id="@+id/modelmy_records_class_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            android:textSize="@dimen/textsize12"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#999999"/>
    </LinearLayout>
    <View
        android:id="@+id/modelmy_records_class_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="#E5E5E5"
        android:layout_marginLeft="@dimen/dp13"
        android:layout_marginRight="@dimen/dp13"
        android:layout_marginTop="@dimen/dp20"
        android:layout_below="@id/modelmy_records_class_time_layout"/>
    <TextView
        android:id="@+id/modelmy_records_class_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textsize12"
        android:text="开始学习"
        android:textColor="#ffffff"
        android:layout_marginTop="@dimen/dp24"
        android:paddingBottom="@dimen/dp_7"
        android:paddingTop="@dimen/dp_7"
        android:paddingLeft="@dimen/dp17"
        android:paddingRight="@dimen/dp17"
        android:layout_marginRight="@dimen/dp4"
        android:layout_toLeftOf="@+id/modelmy_records_class_goon"
        android:background="@drawable/rect_style_orange1"/>
    <TextView
        android:id="@+id/modelmy_records_class_goon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textsize12"
        android:text="继续学习"
        android:textColor="#FF5A30"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp24"
        android:paddingBottom="@dimen/dp_7"
        android:paddingTop="@dimen/dp_7"
        android:paddingLeft="@dimen/dp17"
        android:paddingRight="@dimen/dp17"
        android:layout_marginRight="@dimen/dp13"
        android:background="@drawable/rect_style_orange"/>
</RelativeLayout>