<?xml version="1.0" encoding="utf-8"?><!--    题库 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/modelmy_myclasspacket_main_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp44"
            android:layout_marginLeft="@dimen/dp13"
            android:layout_marginRight="@dimen/dp13"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/modelmy_myclasspacket_main_return_button1"
                android:layout_width="@dimen/dp12"
                android:layout_height="@dimen/dp16"
                android:layout_gravity="center"
                android:background="@drawable/button_return_right_black"
                android:clickable="true"
                android:onClick="onClickMyClassPacketReturn" />

            <TextView
                android:id="@+id/modelmy_myclasspacket_main_titletext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="我的课程包"
                android:textColor="#333333"
                android:textSize="@dimen/textsize18"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:id="@+id/modelmy_myclasspacket_main_line1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:layout_below="@id/modelmy_myclasspacket_main_title"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp5"
            android:background="#e5e5e5" />


        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/Smart_model_my_myclasspacket"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/modelmy_myclasspacket_main_line1">

            <com.scwang.smartrefresh.header.BezierCircleHeader
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ScrollView
                    android:id="@+id/modelmy_myclasspacket_main_content_scroll_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/modelmy_myclasspacket_main_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" />
                        <LinearLayout
                            android:id="@+id/mycoursepacket_end"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/dp15"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:visibility="invisible"
                            android:layout_marginBottom="@dimen/dp_80">
                            <View
                                android:layout_width="@dimen/dp_36"
                                android:layout_height="@dimen/dp1"
                                android:background="#e5e5e5"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="已显示全部内容"
                                android:textSize="@dimen/textsize13"
                                android:textColor="#cc999999"
                                android:layout_marginLeft="@dimen/dp10"
                                android:layout_marginRight="@dimen/dp10"/>
                            <View
                                android:layout_width="@dimen/dp_36"
                                android:layout_height="@dimen/dp1"
                                android:background="#e5e5e5"/>
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>

            <com.scwang.smartrefresh.layout.footer.FalsifyFooter
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.scwang.smartrefresh.layout.SmartRefreshLayout>

        <LinearLayout
            android:id="@+id/modelmy_myclasspacket_main_nodata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/modelmy_myclasspacket_main_line1"
            android:gravity="center"
            android:orientation="horizontal" />
    </RelativeLayout>
</LinearLayout>