<?xml version="1.0" encoding="utf-8"?>
<!--    题库 做题设置 -->
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:id="@+id/questionbank_answerquestioncard_main_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44"
        android:layout_marginLeft="@dimen/dp13"
        android:layout_marginRight="@dimen/dp13"
        android:orientation="horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <ImageView
            android:id="@+id/questionbank_answerquestioncard_main_return_button1"
            android:layout_width="@dimen/dp13"
            android:layout_height="@dimen/dp13"
            android:layout_gravity="center"
            android:background="@drawable/button_close_black"
            android:clickable="true"
            android:onClick="onClickQuestionBankAnswerQuestionCardReturn"/>
        <TextView
            android:id="@+id/questionbank_answerquestioncard__main_titletext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:text="答题卡"
            android:textColor="#333333"
            android:singleLine="true"
            android:ellipsize="end"
            android:textStyle="bold"
            android:textSize="@dimen/textsize18"/>
    </LinearLayout>
    <View
        android:id="@+id/questionbank_answerquestioncard_main_line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_gravity="center_horizontal"
        android:background="#e5e5e5"
        android:layout_below="@id/questionbank_answerquestioncard_main_title"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/questionbank_answerquestioncard_main_line1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/dp13"
            android:layout_marginLeft="@dimen/dp13">
            <LinearLayout
                android:id="@+id/coursedetails_answerquestioncard_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>
            <TextView
                android:id="@+id/coursedetails_answerquestioncard_commit"
                android:layout_width="@dimen/dp_185"
                android:layout_height="@dimen/dp_37"
                android:textColor="#ffffff"
                android:text="交卷并查看结果"
                android:gravity="center"
                android:textSize="@dimen/textsize20"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dp13"
                android:layout_marginTop="@dimen/dp_60"
                android:background="@drawable/textview_style_rect_blue"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
