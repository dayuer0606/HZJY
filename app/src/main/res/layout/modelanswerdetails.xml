<?xml version="1.0" encoding="utf-8"?>
<!--问答-内容模板-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusableInTouchMode="true">
    <RelativeLayout
        android:id="@+id/answerdetails_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <com.android.jwjy.zkktproduct.ControllerCustomRoundAngleImageView
            android:id="@+id/answerdetails_headportrait"
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            app:image_circle="true"
            app:image_radius="16dp"
            app:image_shadow="false"
            app:image_shadow_radius="5dp"
            app:shadow_color="0xffe4e4e4"
            android:layout_marginLeft="@dimen/dp13"
            android:layout_marginRight="@dimen/dp10"
            android:layout_marginTop="@dimen/dp25"
            android:background="@drawable/image_teachersdefault"/>
        <LinearLayout
            android:id="@+id/answerdetails_content1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/answerdetails_headportrait">
            <TextView
                android:id="@+id/answerdetails_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="@dimen/dp25"
                android:textSize="@dimen/textsize17"
                android:layout_marginBottom="@dimen/dp5"
                android:layout_marginRight="@dimen/dp13"
                android:textColor="#333333"/>
            <TextView
                android:id="@+id/answerdetails_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10-25 00:10"
                android:textColor="#999999"
                android:layout_weight="1"
                android:textSize="@dimen/textsize14"
                android:layout_marginBottom="@dimen/dp8"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/answerdetails_top"
                    android:layout_width="@dimen/dp12"
                    android:layout_height="@dimen/dp13"
                    android:layout_marginRight="@dimen/dp4"
                    android:background="@drawable/button_answerdetails_top"
                    android:layout_gravity="center"/>
                <ImageView
                    android:id="@+id/answerdetails_fine"
                    android:layout_width="@dimen/dp12"
                    android:layout_height="@dimen/dp13"
                    android:layout_marginRight="@dimen/dp5"
                    android:background="@drawable/button_answerdetails_fine"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/answerdetails_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_gravity="center"
                    android:textSize="@dimen/textsize16"
                    android:textColor="#333333"
                    android:layout_marginRight="@dimen/dp13"/>
            </LinearLayout>
            <TextView
                android:id="@+id/answerdetails_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize15"
                android:textColor="#666666"
                android:text=""
                android:layout_marginTop="@dimen/dp5"
                android:layout_marginRight="@dimen/dp13"
                android:lineSpacingExtra="@dimen/dp5"
                android:layout_below="@id/answerdetails_name"
                android:layout_marginBottom="@dimen/dp15"/>
        </LinearLayout>
        <!--   layout_marginBottom = 10dp-->
        <GridLayout
            android:id="@+id/answerdetails_imagelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/answerdetails_content1"
            android:layout_toRightOf="@id/answerdetails_headportrait"
            android:layout_marginRight="@dimen/dp13"
            android:layout_marginBottom="@dimen/dp0"
            android:rowCount="5"
            android:columnCount="2"/>
        <LinearLayout
            android:id="@+id/answerdetails_sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/dp20"
            android:layout_below="@id/answerdetails_content1"
            android:layout_marginRight="@dimen/dp13"
            android:layout_toRightOf="@id/answerdetails_headportrait">
            <TextView
                android:id="@+id/answerdetails_sign1"
                android:layout_width="@dimen/dp_83"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_style_rect_black"
                android:padding="@dimen/dp0"
                android:text="消防安全实务"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="center"
                android:textColor="#999999"
                android:textSize="@dimen/textsize12"
                android:visibility="invisible"/>
            <TextView
                android:id="@+id/answerdetails_sign2"
                android:layout_width="@dimen/dp_83"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_style_rect_black"
                android:padding="@dimen/dp0"
                android:text="消防安全实务"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="center"
                android:textColor="#999999"
                android:textSize="@dimen/textsize12"
                android:layout_marginLeft="@dimen/dp13"
                android:visibility="invisible"/>
            <TextView
                android:id="@+id/answerdetails_sign3"
                android:layout_width="@dimen/dp_83"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_style_rect_black"
                android:padding="@dimen/dp0"
                android:text="消防安全实务"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="center"
                android:textColor="#999999"
                android:layout_marginLeft="@dimen/dp13"
                android:textSize="@dimen/textsize12"
                android:visibility="invisible"/>
        </LinearLayout>
        <View
            android:id="@+id/answerdetails_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp0_5"
            android:background="#e5e5e5"
            android:layout_below="@id/answerdetails_sign" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/answerdetails_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/answerdetails_head"/>
</RelativeLayout>