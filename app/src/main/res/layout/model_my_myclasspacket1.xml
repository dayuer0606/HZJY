<?xml version="1.0" encoding="utf-8"?>
<!--    公开课 列表详情-->
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.android.weischool.ControllerCustomRoundAngleImageView
        android:id="@+id/modelmy_myclasspacket1_cover"
        android:layout_width="@dimen/dp_96"
        android:layout_height="@dimen/dp_120"
        android:layout_marginTop="@dimen/dp15"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp13"
        app:shadow_color="0xffe4e4e4"
        app:image_shadow="true"
        app:image_radius="5dp"
        app:image_shadow_radius="5dp"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/modelmy_myclasspacket1_classname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginRight="@dimen/dp_13"
        android:textSize="@dimen/textsize16"
        android:textColor="#212832"
        android:singleLine="true"
        android:ellipsize="end"
        android:maxEms="13"
        android:layout_toRightOf="@id/modelmy_myclasspacket1_cover"
        android:text="2020基础精讲班"/>
    <TextView
        android:id="@+id/modelmy_myclasspacket1_learnpersoncount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp15"
        android:textSize="@dimen/textsize12"
        android:textColor="#999999"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_toRightOf="@id/modelmy_myclasspacket1_cover"
        android:layout_below="@id/modelmy_myclasspacket1_classname"
        android:text="1000"/>
    <TextView
        android:id="@+id/modelmy_myclasspacket1_learnperson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp15"
        android:textSize="@dimen/textsize12"
        android:textColor="#999999"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_toRightOf="@id/modelmy_myclasspacket1_learnpersoncount"
        android:layout_below="@id/modelmy_myclasspacket1_classname"
        android:text=" 人正在学习"/>
    <LinearLayout
        android:id="@+id/modelmy_myclasspacket1_learnprogresslayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toRightOf="@id/modelmy_myclasspacket1_cover"
        android:layout_alignBottom="@id/modelmy_myclasspacket1_cover"
        android:layout_marginRight="@dimen/dp13">
        <TextView
            android:id="@+id/modelmy_myclasspacket1_learnprogress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/dp15"
            android:textSize="@dimen/textsize12"
            android:textColor="#FF5A30"
            android:singleLine="true"
            android:gravity="right"
            android:ellipsize="end"
            android:text="已学习："/>
        <TextView
            android:id="@+id/modelmy_myclasspacket1_learnprogresscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp15"
            android:textSize="@dimen/textsize12"
            android:textColor="#FF5A30"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="right"
            android:text="70%"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/modelmy_myclasspacket1_price_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toRightOf="@id/modelmy_myclasspacket1_cover"
        android:layout_alignBottom="@id/modelmy_myclasspacket1_cover"
        android:visibility="gone"
        android:layout_marginRight="@dimen/dp13">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/dp15"
            android:textSize="@dimen/textsize16"
            android:textColor="#FF2C10"
            android:singleLine="true"
            android:gravity="right"
            android:ellipsize="end"
            android:text="¥ "/>
        <TextView
            android:id="@+id/modelmy_myclasspacket1_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp15"
            android:textSize="@dimen/textsize16"
            android:textColor="#FF2C10"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="right"
            android:text="5000"/>
    </LinearLayout>
    <TextView
        android:id="@+id/modelmy_myclasspacket1_golearn"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp27"
        android:text="去学习"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize12"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:background="@drawable/button_style"
        android:layout_marginRight="@dimen/dp13"
        android:clickable="true"
        android:layout_alignBottom="@id/modelmy_myclasspacket1_cover"/>
    <View
        android:id="@+id/modelmy_myclasspacket1_line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_gravity="center_horizontal"
        android:background="#e5e5e5"
        android:layout_marginTop="@dimen/dp15"
        android:layout_marginRight="@dimen/dp_13"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_below="@id/modelmy_myclasspacket1_cover"/>
</RelativeLayout>
