<?xml version="1.0" encoding="utf-8"?>
<!--    公开课 列表详情-->
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.android.school.ControllerCustomRoundAngleImageView
        android:id="@+id/modelmy_myclasspacket1_cover"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_182"
        android:layout_marginTop="@dimen/dp15"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp13"
        app:shadow_color="0xffe4e4e4"
        app:image_shadow="true"
        app:image_radius="5dp"
        app:image_shadow_radius="5dp"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/modelmy_myclasspacket1_classname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginRight="@dimen/dp_13"
        android:layout_marginLeft="@dimen/dp13"
        android:textSize="@dimen/textsize17"
        android:textColor="#333333"
        android:singleLine="true"
        android:ellipsize="end"
        android:maxEms="13"
        android:layout_below="@id/modelmy_myclasspacket1_cover"
        android:text="2020基础精讲班"/>
    <TextView
        android:id="@+id/modelmy_myclasspacket1_agreement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看协议"
        android:gravity="bottom|right"
        android:textSize="@dimen/textsize12"
        android:textColor="@color/blue649cf0"
        android:layout_below="@id/modelmy_myclasspacket1_cover"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp13"
        android:layout_alignBottom="@id/modelmy_myclasspacket1_classname" />

    <TextView
        android:id="@+id/modelmy_myclasspacket1_stage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp15"
        android:layout_marginLeft="@dimen/dp13"
        android:textSize="@dimen/textsize13"
        android:textColor="#999999"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_below="@id/modelmy_myclasspacket1_classname"
        android:text="阶段 "/>
    <TextView
        android:id="@+id/modelmy_myclasspacket1_stagecount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp15"
        android:textSize="@dimen/textsize13"
        android:textColor="#999999"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_toRightOf="@id/modelmy_myclasspacket1_stage"
        android:layout_below="@id/modelmy_myclasspacket1_classname"
        android:text="1"/>
    <TextView
        android:id="@+id/modelmy_myclasspacket1_separate1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp15"
        android:textSize="@dimen/textsize13"
        android:textColor="#999999"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_toRightOf="@id/modelmy_myclasspacket1_stagecount"
        android:layout_below="@id/modelmy_myclasspacket1_classname"
        android:text="  •  "/>
    <TextView
        android:id="@+id/modelmy_myclasspacket1_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp15"
        android:textSize="@dimen/textsize13"
        android:textColor="#999999"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_toRightOf="@id/modelmy_myclasspacket1_separate1"
        android:layout_below="@id/modelmy_myclasspacket1_classname"
        android:text="课程 "/>
    <TextView
        android:id="@+id/modelmy_myclasspacket1_coursecount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp15"
        android:textSize="@dimen/textsize13"
        android:textColor="#999999"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_toRightOf="@id/modelmy_myclasspacket1_course"
        android:layout_below="@id/modelmy_myclasspacket1_classname"
        android:text="4"/>
    <TextView
        android:id="@+id/modelmy_myclasspacket1_separate2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp15"
        android:textSize="@dimen/textsize13"
        android:textColor="#999999"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_toRightOf="@id/modelmy_myclasspacket1_coursecount"
        android:layout_below="@id/modelmy_myclasspacket1_classname"
        android:text="  •  "/>
    <TextView
        android:id="@+id/modelmy_myclasspacket1_learnpersoncount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp15"
        android:textSize="@dimen/textsize13"
        android:textColor="#999999"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_toRightOf="@id/modelmy_myclasspacket1_separate2"
        android:layout_below="@id/modelmy_myclasspacket1_classname"
        android:text="1000"/>
    <TextView
        android:id="@+id/modelmy_myclasspacket1_learnperson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp15"
        android:textSize="@dimen/textsize13"
        android:textColor="#999999"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_toRightOf="@id/modelmy_myclasspacket1_learnpersoncount"
        android:layout_below="@id/modelmy_myclasspacket1_classname"
        android:text=" 人已学习"/>
    <LinearLayout
        android:id="@+id/modelmy_myclasspacket1_learnprogresslayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toRightOf="@id/modelmy_myclasspacket1_learnperson"
        android:layout_below="@id/modelmy_myclasspacket1_classname"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp13">
        <TextView
            android:id="@+id/modelmy_myclasspacket1_learnprogress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/dp15"
            android:textSize="@dimen/textsize13"
            android:textColor="@color/holo_red_dark"
            android:singleLine="true"
            android:gravity="right"
            android:ellipsize="end"
            android:text="已学习："/>
        <TextView
            android:id="@+id/modelmy_myclasspacket1_learnprogresscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp15"
            android:textSize="@dimen/textsize13"
            android:textColor="@color/holo_red_dark"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="right"
            android:text="70%"/>
    </LinearLayout>
    <View
        android:id="@+id/modelmy_myclasspacket1_line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_gravity="center_horizontal"
        android:background="#e5e5e5"
        android:layout_marginTop="@dimen/dp15"
        android:layout_marginRight="@dimen/dp_13"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_below="@id/modelmy_myclasspacket1_stage"/>
</RelativeLayout>
