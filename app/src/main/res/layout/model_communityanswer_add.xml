<?xml version="1.0" encoding="utf-8"?>
<!--    课程问答 -->
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout android:id="@+id/communityanswer_add_layout_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44"
        android:layout_marginLeft="@dimen/dp13"
        android:layout_marginRight="@dimen/dp13"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/communityanswer_add_layout_return_button1"
            android:layout_width="@dimen/dp12"
            android:layout_height="@dimen/dp16"
            android:layout_gravity="center"
            android:background="@drawable/button_close_black"
            android:onClick="onClickCommunityAnswerReturn"/>

        <TextView
            android:id="@+id/communityanswer_add_layout_titletext"
            android:layout_width="319dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="提问"
            android:textColor="#333333"
            android:textSize="@dimen/textsize18"
            android:textStyle="bold" />
<!--        android:textColor="#ff333333"-->
        <TextView
            android:id="@+id/communityanswer_add_layout_next_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="下一步"
            android:textColor="#FFA899"
            android:textSize="@dimen/textsize15"/>
    </LinearLayout>
    <View
        android:id="@+id/communityanswer_add_layout_line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_gravity="center_horizontal"
        android:background="#e5e5e5"
        android:layout_marginBottom="@dimen/dp5"
        android:layout_below="@id/communityanswer_add_layout_title"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/communityanswer_add_layout_line1">
        <LinearLayout
            android:id="@+id/communityanswer_add_layout_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp13"
            android:layout_marginRight="@dimen/dp13"
            android:orientation="vertical">
            <EditText
                android:id="@+id/communityanswer_add_layout_contentetitledittext"
                android:layout_marginTop="@dimen/dp20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize16"
                android:textColorHint="#80999999"
                android:layout_marginBottom="@dimen/dp10"
                android:singleLine="true"
                android:hint="请输入您的问题"
                android:background="@null"/>
            <View
                android:id="@+id/communityanswer_add_layout_line2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:layout_gravity="center_horizontal"
                android:background="#e5e5e5"/>
            <EditText
                android:id="@+id/communityanswer_add_layout_contentedittext"
                android:layout_marginTop="@dimen/dp10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize15"
                android:textColorHint="#80999999"
                android:layout_marginBottom="@dimen/dp10"
                android:hint="对问题进行补充说明，可以更快得到回复哦"
                android:background="@null"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/communityanswer_add_layout_image"
                android:layout_marginTop="@dimen/dp73"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="*最多可添加9张图片"
                android:textColor="#ACADAD"
                android:layout_marginTop="@dimen/dp16"
                android:textSize="@dimen/textsize12"
                />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
