<?xml version="1.0" encoding="utf-8"?>
<!--    课程问答 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">
    <TextView
        android:id="@+id/coursedetails_download_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:textColor="#333333"
        android:textSize="@dimen/textsize17"
        android:text="下载视频"
        android:gravity="center"/>
    <View
        android:id="@+id/coursedetails_download_line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="#e5e5e5"/>
    <TextView
        android:id="@+id/coursedetails_download_title1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#585858"
        android:textSize="@dimen/textsize16"
        android:text="章节列表"
        android:layout_marginLeft="@dimen/dp13"
        android:layout_marginTop="@dimen/dp18"
        android:layout_marginBottom="@dimen/dp6"
        android:gravity="left"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp180">
        <LinearLayout
            android:id="@+id/coursedetails_download_chapterlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>
    </ScrollView>
    <View
        android:id="@+id/coursedetails_download_line2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="#e5e5e5"
        android:layout_marginTop="@dimen/dp13"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/coursedetails_download_all"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="全部缓存"
            android:textSize="@dimen/textsize15"
            android:textColor="#333333"
            android:gravity="center"
            android:background="#f9fafb"/>
        <View
            android:id="@+id/coursedetails_download_line3"
            android:layout_width="@dimen/dp1"
            android:layout_height="match_parent"
            android:background="#e5e5e5"/>
        <TextView
            android:id="@+id/coursedetails_download_manager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/textsize15"
            android:textColor="#333333"
            android:text="管理缓存"
            android:gravity="center"
            android:background="#f9fafb"/>
    </LinearLayout>
    <View
        android:id="@+id/coursedetails_download_line4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="#e5e5e5"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp25"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/textsize11"
                android:textColor="#999999"
                android:text="已缓存："
                android:background="#f9fafb"
                android:gravity="right|center_vertical"/>
            <TextView
                android:id="@+id/coursedetails_download_num"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/textsize11"
                android:textColor="#649cf0"
                android:gravity="center_vertical"
                android:background="#f9fafb"
                android:text="0"/>
            <TextView
                android:id="@+id/coursedetails_download_sumnum"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/textsize11"
                android:textColor="#999999"
                android:gravity="center_vertical"
                android:text="/10"
                android:paddingRight="@dimen/dp13"
                android:background="#f9fafb"/>
        </LinearLayout>
        <TextView
            android:id="@+id/coursedetails_download_availalesize"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="剩余空间：2.5G"
            android:textSize="@dimen/textsize11"
            android:textColor="#999999"
            android:paddingLeft="@dimen/dp13"
            android:background="#f9fafb"
            android:gravity="left|center_vertical"/>
    </LinearLayout>
</LinearLayout>
