<?xml version="1.0" encoding="utf-8"?>
<!--    题库 -->
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/modelquestionbank_main"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <!--    题库 -->
    <LinearLayout
        android:id="@+id/modelquestionbank_mainquestionbank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="@dimen/dp13"
        android:layout_marginLeft="@dimen/dp13"
        android:layout_marginBottom="@dimen/dp10"
        android:layout_marginTop="@dimen/dp15">
        <TextView
            android:layout_width="@dimen/dp2"
            android:layout_height="@dimen/dp10"
            android:background="@color/holo_red_dark"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/modelquestionbank_mainquestionbank_id"
            android:layout_width="@dimen/dp0"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/modelquestionbank_mainquestionbank_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="基金法律法规"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_gravity="center"
            android:textSize="@dimen/textsize17"
            android:layout_marginRight="@dimen/dp13"
            android:textColor="#333333"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/modelquestionbank_mainquestionbank_more"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更多"
                android:textSize="@dimen/textsize13"
                android:textColor="#cecdcd"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp5"/>
            <ImageView
                android:layout_width="@dimen/dp6"
                android:layout_height="@dimen/dp10"
                android:layout_gravity="center"
                android:src="@drawable/button_arrow_right"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/modelquestionbank_mainquestionbank_describ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="这是题库的描述"
        android:textColor="#b3999999"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="@dimen/textsize14"
        android:layout_below="@id/modelquestionbank_mainquestionbank"
        android:layout_marginLeft="@dimen/dp25"
        android:layout_marginRight="@dimen/dp25"/>
    <GridLayout
        android:id="@+id/modelquestionbank_mainquestionbank_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="30"
        android:layout_marginLeft="@dimen/dp25"
        android:layout_marginRight="@dimen/dp25"
        android:layout_below="@id/modelquestionbank_mainquestionbank_describ">
    </GridLayout>
</RelativeLayout>
