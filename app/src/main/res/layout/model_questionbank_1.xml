<?xml version="1.0" encoding="utf-8"?>
<!--    题库 -->
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/modelquestionbank_main"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <!--    题库 -->
    <LinearLayout
        android:id="@+id/modelquestionbank_mainquestionbank"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp10"
        android:layout_alignParentLeft="true">
        <TextView
            android:layout_width="@dimen/dp2"
            android:layout_height="match_parent"
            android:background="@color/bottom_button_select"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/modelquestionbank_mainquestionbank_id"
            android:layout_width="@dimen/dp0"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/modelquestionbank_mainquestionbank_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="基金法律法规"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_gravity="center"
            android:textSize="@dimen/textsize18"
            android:layout_marginRight="@dimen/dp13"
            android:textColor="#323334"/>
        <ImageView
            android:id="@+id/modelquestionbank_mainquestionbank_more_down"
            android:layout_width="@dimen/dp10"
            android:layout_height="@dimen/dp6"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dp13"
            android:src="@drawable/button_arrow_down"/>
        <ImageView
            android:id="@+id/modelquestionbank_mainquestionbank_more"
            android:layout_width="@dimen/dp6"
            android:layout_height="@dimen/dp10"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dp13"
            android:src="@drawable/button_arrow_right"/>
    </LinearLayout>
    <com.android.weischool.ModelExpandView
        android:id="@+id/modelquestionbank_mainquestionbank_list_expandView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_below="@+id/modelquestionbank_mainquestionbank"
        android:clickable="true">
        <LinearLayout
            android:id="@+id/modelquestionbank_mainquestionbank_list_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>
    </com.android.weischool.ModelExpandView>
</RelativeLayout>
