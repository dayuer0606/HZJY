<?xml version="1.0" encoding="utf-8"?>
<!--    题库 做题设置 -->
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/questionbank_answerpaper_shortanswer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textSize="@dimen/textsize17"
        android:text=""
        android:layout_marginTop="@dimen/dp_20"
        android:textColor="#666666"
        android:lineSpacingExtra="@dimen/dp_5"/>
    <EditText
        android:id="@+id/questionbank_answerpaper_shortansweredittext"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_below="@id/questionbank_answerpaper_shortanswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入您的答案"
        android:windowSoftInputMode="stateVisible|adjustResize"
        android:textSize="@dimen/textsize15"
        android:textColor="#999999"
        android:padding="@dimen/dp13"
        android:lineSpacingExtra="@dimen/dp_5"
        android:background="@drawable/bg_edittext"/>
</RelativeLayout>
