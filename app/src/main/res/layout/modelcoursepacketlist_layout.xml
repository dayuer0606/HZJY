<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/coursepacketlist_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.android.jwjy.zkktproduct.ControllerCustomRoundAngleImageView
        android:id="@+id/coursepacketcover"
        android:layout_width="@dimen/dp_96"
        android:layout_height="@dimen/dp_120"
        android:scaleType="centerCrop"
        app:shadow_color="0xffe4e4e4"
        app:image_shadow="true"
        app:image_radius="@dimen/dp16"
        app:image_shadow_radius="@dimen/dp5"
        android:layout_marginTop="@dimen/dp20"
        android:layout_marginRight="@dimen/dp13"
        android:layout_marginLeft="@dimen/dp13"/>
    <TextView
        android:id="@+id/coursepacketName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开学第一课"
        android:gravity="left"
        android:layout_alignTop="@id/coursepacketcover"
        android:layout_toRightOf="@id/coursepacketcover"
        android:textSize="@dimen/textsize16"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginRight="@dimen/dp13"
        android:textColor="#333333"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/coursepacketpriceOld"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="原价"
        android:gravity="right"
        android:layout_gravity="right"
        android:textSize="@dimen/textsize13"
        android:layout_below="@id/coursepacketcover"
        android:textColor="@color/black999999"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp13"
        android:layout_marginRight="@dimen/dp13"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/coursepacketName"/>

    <TextView
        android:id="@+id/coursepacketcontent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="人正在学习"
        android:gravity="right"
        android:layout_gravity="right"
        android:textSize="@dimen/textsize13"
        android:textColor="@color/black999999"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginRight="@dimen/dp13"
        android:layout_marginTop="@dimen/dp9"
        android:layout_toRightOf="@id/coursepacketcover"
        android:layout_below="@id/coursepacketName"/>
    <TextView
        android:id="@+id/coursepacketprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="免费"
        android:gravity="right|bottom"
        android:layout_gravity="right"
        android:layout_below="@id/coursepacketcontent"
        android:layout_alignBottom="@id/coursepacketcover"
        android:layout_toRightOf="@id/coursepacketcover"
        android:textColor="#333333"
        android:textSize="@dimen/textsize17"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginRight="@dimen/dp13"/>
    <TextView
        android:id="@+id/coursepacketbuy"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp27"
        android:text="立即购买"
        android:layout_alignBottom="@id/coursepacketcover"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="@dimen/textsize12"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginRight="@dimen/dp13"
        android:background="@drawable/textview_style"/>
    <View
        android:id="@+id/coursepacket_line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_gravity="center_horizontal"
        android:background="#e5e5e5"
        android:layout_marginTop="@dimen/dp20"
        android:layout_below="@id/coursepacketprice"/>
</RelativeLayout>
