<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusableInTouchMode="true">
    <LinearLayout
        android:id="@+id/coursepacket_coursestage_label_namelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/dp13"
        android:layout_marginTop="@dimen/dp20"
        android:layout_marginRight="10dp">
        <TextView
            android:layout_width="@dimen/dp2"
            android:layout_height="@dimen/dp10"
            android:background="@color/holo_red_dark"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/coursepacket_coursestage_label_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:textSize="@dimen/textsize17"
            android:textColor="#333333"/>
        <ImageView
            android:id="@+id/coursepacket_coursestage_label_Separator"
            android:layout_width="@dimen/dp3"
            android:layout_height="@dimen/dp3"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:src="@drawable/button_separator_black"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/coursepacket_coursestage_label_coursecount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize13"
            android:text="共2讲"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/dp13"
            android:layout_gravity="center"
            android:textColor="#333333"/>
        <ImageView
            android:id="@+id/coursepacket_coursestage_label_arrow_right"
            android:layout_width="@dimen/dp6"
            android:layout_height="@dimen/dp10"
            android:layout_gravity="center"
            android:src="@drawable/button_arrow_right"/>
        <ImageView
            android:id="@+id/coursepacket_coursestage_label_arrow_down"
            android:layout_width="@dimen/dp10"
            android:layout_height="@dimen/dp6"
            android:layout_gravity="center"
            android:src="@drawable/button_arrow_down"/>
    </LinearLayout>
    <com.android.jwjy.zkktproduct.ModelExpandView
        android:id="@+id/coursepacket_coursestage_label_expandView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="invisible"
        android:layout_below="@+id/coursepacket_coursestage_label_namelayout"
        android:clickable="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:id="@+id/coursepacket_coursestage_label_card1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/dp10"
                app:cardElevation="@dimen/dp0_5"
                android:layout_marginRight="@dimen/dp13"
                android:layout_marginLeft="@dimen/dp13"
                android:layout_marginTop="@dimen/dp15"
                android:layout_marginBottom="@dimen/dp7"
                app:cardBackgroundColor="#fcfcfc">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/coursepacket_coursestage_bef"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp10"
                        android:layout_marginLeft="@dimen/dp12"
                        android:layout_marginRight="@dimen/dp12"
                        android:layout_marginBottom="@dimen/dp12"
                        android:layout_gravity="center"
                        android:textSize="@dimen/textsize14"
                        android:textColor="#666666"
                        android:text=""/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp0_5"
                        android:background="#e5e5e5"
                        android:layout_marginLeft="@dimen/dp12"
                        android:layout_marginRight="@dimen/dp12"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/dp12"
                        android:layout_marginBottom="@dimen/dp10">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="学习进度："
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/dp12"
                            android:layout_marginRight="@dimen/dp12"
                            android:textSize="@dimen/textsize14"
                            android:textColor="#666666"/>
                        <com.android.jwjy.zkktproduct.ControllerHorizontalProgressBar
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp13"
                            android:layout_weight="1"
                            android:layout_gravity="left|center_vertical"
                            app:HorizontalProgresReachColor="#649cf0"
                            app:HorizontalProgresReachTextVisibility="visible"
                            app:HorizontalProgresUnReachColor="#f4f3f3"
                            app:HorizontalProgresUnReachHeight="@dimen/dp13"
                            app:HorizontalProgresReachHeight="@dimen/dp10"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_marginRight="@dimen/dp12"
                            android:id="@+id/progressBarLarge"/>
                        <TextView
                            android:id="@+id/progressBarLargenum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/dp12"
                            android:textSize="@dimen/textsize14"
                            android:textColor="#666666"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/coursepacket_coursestage_label_card2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/dp10"
                app:cardElevation="@dimen/dp0_5"
                android:layout_marginRight="@dimen/dp13"
                android:layout_marginLeft="@dimen/dp13"
                android:layout_marginTop="@dimen/dp10"
                app:cardBackgroundColor="#fcfcfc"
                android:layout_below="@id/coursepacket_coursestage_label_card1">
                <LinearLayout
                    android:id="@+id/coursepacket_coursestage_label_card2_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </com.android.jwjy.zkktproduct.ModelExpandView>
</RelativeLayout>