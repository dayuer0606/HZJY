<?xml version="1.0" encoding="utf-8"?>
<!--    新闻资讯 列表详情-->
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <ImageView
        android:id="@+id/news1_cover"
        android:layout_width="@dimen/dp_140"
        android:layout_height="@dimen/dp_80"
        android:layout_marginTop="@dimen/dp15"
        android:layout_marginRight="@dimen/dp13"
        android:layout_alignParentRight="true"
        android:background="@drawable/modelcoursecover"/>
    <TextView
        android:layout_toLeftOf="@id/news1_cover"
        android:id="@+id/news1_classname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp20"
        android:layout_marginLeft="@dimen/dp_13"
        android:textSize="@dimen/textsize16"
        android:textColor="#333333"
        android:lines="2"
        android:ellipsize="end"
        android:text="案例分析建筑防火知识"/>
    <LinearLayout
        android:id="@+id/news1_timeandintroduce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toLeftOf="@id/news1_cover"
        android:layout_above="@+id/news1_line1"
        android:layout_marginLeft="@dimen/dp_13"
        android:gravity="left|center">
        <TextView
            android:id="@+id/news1_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推荐"
            android:textSize="@dimen/textsize13"
            android:textColor="@color/blue649cf0"
            android:layout_marginRight="@dimen/dp14"/>
        <TextView
            android:id="@+id/news1_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019-11-12"
            android:textSize="@dimen/textsize13"
            android:textColor="@color/black999999"/>
        <TextView
            android:id="@+id/news1_eparator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" • 浏览 "
            android:textSize="@dimen/textsize13"
            android:textColor="@color/black999999"/>
        <TextView
            android:id="@+id/news1_looknum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="99+"
            android:textSize="@dimen/textsize13"
            android:textColor="@color/black999999"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginRight="@dimen/dp13"/>
    </LinearLayout>

    <View
        android:id="@+id/news1_line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_below="@id/news1_cover"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginTop="24dp"
        android:layout_marginRight="@dimen/dp_13"
        android:background="#e5e5e5" />
</RelativeLayout>