<?xml version="1.0" encoding="utf-8"?>
<!--    课程问答 -->
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <ImageView
        android:id="@+id/course_downloadmanager_child1_select"
        android:layout_marginTop="@dimen/dp15"
        android:layout_marginBottom="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp0"
        android:layout_width="@dimen/dp0"
        android:layout_height="@dimen/dp20"
        android:layout_gravity="center"
        android:background="@drawable/button_select_gray" />
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/course_downloadmanager_child1_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp15"
            android:layout_marginBottom="@dimen/dp10"
            android:layout_marginLeft="@dimen/dp13"
            android:layout_marginRight="@dimen/dp13">
            <TextView
                android:id="@+id/course_downloadmanager_child1_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp13"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="left"
                android:text="管理缓存"
                android:textColor="#333333"
                android:singleLine="true"
                android:ellipsize="end"
                android:textStyle="bold"
                android:textSize="@dimen/textsize15"/>
            <ImageView
                android:id="@+id/course_downloadmanager_child1_function"
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:layout_gravity="center"
                android:background="@drawable/button_pause_blue"/>
        </LinearLayout>
        <ProgressBar
            android:layout_marginLeft="@dimen/dp13"
            android:layout_marginRight="@dimen/dp13"
            android:id="@+id/progress_bar_healthy"
            android:layout_below="@id/course_downloadmanager_child1_name_layout"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp3"
            android:layout_gravity="center"
            android:max="100"
            android:progress="50"
            android:progressDrawable="@drawable/progressbar_bg"
            />
        <LinearLayout
            android:id="@+id/course_downloadmanager_child_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp13"
            android:layout_marginRight="@dimen/dp13"
            android:layout_marginTop="@dimen/dp8"
            android:layout_below="@id/progress_bar_healthy">
            <TextView
                android:id="@+id/course_downloadmanager_child_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下载中："
                android:textColor="#999999"
                android:textSize="@dimen/textsize11"/>
            <TextView
                android:id="@+id/course_downloadmanager_child_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.5"
                android:textColor="#999999"
                android:textSize="@dimen/textsize11"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textColor="#999999"
                android:textSize="@dimen/textsize11"/>
            <TextView
                android:id="@+id/course_downloadmanager_child_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="35M"
                android:textColor="#999999"
                android:textSize="@dimen/textsize11"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
